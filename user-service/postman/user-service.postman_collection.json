{
    "info": {
        "name": "User Service API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create User",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/users",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                }
            }
        },
        {
            "name": "Login",
            "request": {
                "method": "POST",
                "url": "{{baseUrl}}/login",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                }
            }
        },
        {
            "name": "Get Users",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/users",
                "auth": {
                    "type": "bearer",
                    "bearer": "{{token}}"
                }
            }
        }
    ]
}